---
// Restaurants page - Where to eat in Annecy
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import { loadTranslations, t, locales } from '../../utils/i18n';
import type { Locale } from '../../types/i18n';

export async function getStaticPaths() {
  return locales.map((localeConfig) => ({
    params: { locale: localeConfig.code },
  }));
}

const { locale } = Astro.params;
const translations = await loadTranslations(locale as Locale);

// SEO data
const title = `${t(translations, 'nav.restaurants')} - Salut Annecy`;
const description = "Découvrez les meilleurs restaurants, cafés et lieux où manger à Annecy et dans le bassin annécien.";

// Mock data for restaurants (in a real app, this would come from a database)
const restaurants = [
  {
    id: 1,
    name: "Le Palace du Lac",
    category: "Gastronomique",
    description: "Restaurant gastronomique avec vue sur le lac d'Annecy",
    address: "2 Avenue du Rhône, 74000 Annecy",
    rating: 4.5,
    image: "/images/restaurants/palace-lac.jpg"
  },
  {
    id: 2,
    name: "Chez Mamie Lise",
    category: "Savoyard",
    description: "Spécialités savoyardes dans un cadre authentique",
    address: "8 Rue de la République, 74000 Annecy",
    rating: 4.2,
    image: "/images/restaurants/mamie-lise.jpg"
  },
  {
    id: 3,
    name: "Le Petit Bouchon",
    category: "Sur le pouce",
    description: "Sandwichs et plats rapides de qualité",
    address: "15 Rue Sainte-Claire, 74000 Annecy",
    rating: 4.0,
    image: "/images/restaurants/petit-bouchon.jpg"
  }
];

const categories = ["Tous", "Gastronomique", "Savoyard", "Sur le pouce", "Cuisine du monde", "Végétarien"];
---

<Layout 
  title={title} 
  description={description} 
  locale={locale}
>
  <Navigation locale={locale} currentPath="/restaurants" />
  
  <main class="restaurants-page">
    <!-- Hero Section -->
    <section class="hero-section">
      <div class="container">
        <h1 class="page-title">{t(translations, 'nav.restaurants')}</h1>
        <p class="page-description">
          Découvrez les meilleurs restaurants, cafés et lieux où manger à Annecy et dans le bassin annécien.
        </p>
      </div>
    </section>

    <!-- Filters Section -->
    <section class="filters-section">
      <div class="container">
        <div class="filters-bar">
          <div class="category-filters">
            <span class="filter-label">Catégories :</span>
            {categories.map((category) => (
              <button class={`filter-btn ${category === 'Tous' ? 'active' : ''}`}>
                {category}
              </button>
            ))}
          </div>
          <div class="view-options">
            <button class="view-btn active" aria-label="Vue grille">
              <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24">
                <path d="M3 11h8V3H3v8zm2-6h4v4H5V5zM13 3v8h8V3h-8zm6 6h-4V5h4v4zM3 21h8v-8H3v8zm2-6h4v4H5v-4zM18 13h-2v2h2v-2zM18 17h-2v2h2v-2zM20 15h-2v2h2v-2z"/>
              </svg>
            </button>
            <button class="view-btn" aria-label="Vue carte">
              <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </section>

    <!-- Results Section -->
    <section class="results-section">
      <div class="container">
        <div class="results-header">
          <p class="results-count">{restaurants.length} restaurants trouvés</p>
          <select class="sort-select">
            <option value="relevance">Pertinence</option>
            <option value="rating">Note</option>
            <option value="distance">Distance</option>
            <option value="price">Prix</option>
          </select>
        </div>

        <div class="restaurants-grid">
          {restaurants.map((restaurant) => (
            <article class="restaurant-card">
              <div class="restaurant-image">
                <img src={restaurant.image} alt={restaurant.name} loading="lazy" />
                <div class="restaurant-category">{restaurant.category}</div>
              </div>
              <div class="restaurant-content">
                <h3 class="restaurant-name">{restaurant.name}</h3>
                <p class="restaurant-description">{restaurant.description}</p>
                <p class="restaurant-address">{restaurant.address}</p>
                <div class="restaurant-meta">
                  <div class="rating">
                    <span class="rating-stars">★★★★★</span>
                    <span class="rating-value">{restaurant.rating}</span>
                  </div>
                  <a href={`/${locale}/restaurants/${restaurant.id}`} class="btn btn-primary btn-sm">
                    Voir les détails
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>

        <!-- Pagination -->
        <nav class="pagination" aria-label="Navigation des pages">
          <button class="btn btn-ghost" disabled>Précédent</button>
          <button class="btn btn-primary">1</button>
          <button class="btn btn-ghost">2</button>
          <button class="btn btn-ghost">3</button>
          <button class="btn btn-ghost">Suivant</button>
        </nav>
      </div>
    </section>
  </main>
</Layout>

<style>
  .restaurants-page {
    min-height: 100vh;
  }

  .hero-section {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 4rem 0 3rem;
  }

  .page-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    text-align: center;
  }

  .page-description {
    font-size: 1.25rem;
    text-align: center;
    opacity: 0.9;
    max-width: 600px;
    margin: 0 auto;
  }

  .filters-section {
    padding: 2rem 0;
    background: #f8f9fa;
    border-bottom: 1px solid #e9ecef;
  }

  .filters-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
  }

  .category-filters {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .filter-label {
    font-weight: 600;
    color: #495057;
  }

  .filter-btn {
    padding: 0.5rem 1rem;
    border: 1px solid #dee2e6;
    background: white;
    border-radius: 2rem;
    font-size: 0.875rem;
    cursor: pointer;
    transition: all 0.2s;
  }

  .filter-btn:hover,
  .filter-btn.active {
    background: #667eea;
    color: white;
    border-color: #667eea;
  }

  .view-options {
    display: flex;
    gap: 0.5rem;
  }

  .view-btn {
    padding: 0.5rem;
    border: 1px solid #dee2e6;
    background: white;
    border-radius: 0.375rem;
    cursor: pointer;
    transition: all 0.2s;
  }

  .view-btn:hover,
  .view-btn.active {
    background: #667eea;
    color: white;
    border-color: #667eea;
  }

  .results-section {
    padding: 2rem 0;
  }

  .results-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .results-count {
    font-weight: 600;
    color: #495057;
  }

  .sort-select {
    padding: 0.5rem 1rem;
    border: 1px solid #dee2e6;
    border-radius: 0.375rem;
    background: white;
    font-size: 0.875rem;
  }

  .restaurants-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .restaurant-card {
    background: white;
    border-radius: 0.75rem;
    overflow: hidden;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .restaurant-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px -5px rgba(0, 0, 0, 0.1);
  }

  .restaurant-image {
    position: relative;
    height: 200px;
    background: #f8f9fa;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #6c757d;
  }

  .restaurant-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .restaurant-category {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: rgba(0, 0, 0, 0.8);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .restaurant-content {
    padding: 1.5rem;
  }

  .restaurant-name {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: #212529;
  }

  .restaurant-description {
    color: #6c757d;
    margin-bottom: 0.75rem;
    line-height: 1.5;
  }

  .restaurant-address {
    font-size: 0.875rem;
    color: #868e96;
    margin-bottom: 1rem;
  }

  .restaurant-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .rating {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .rating-stars {
    color: #ffc107;
    font-size: 1rem;
  }

  .rating-value {
    font-weight: 600;
    color: #495057;
  }

  .pagination {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
  }

  @media (max-width: 768px) {
    .page-title {
      font-size: 2rem;
    }

    .filters-bar {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .category-filters {
      width: 100%;
    }

    .results-header {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }

    .restaurants-grid {
      grid-template-columns: 1fr;
    }
  }
</style>