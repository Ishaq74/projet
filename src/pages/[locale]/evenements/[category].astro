import type { Locale } from '../../../types/i18n';

export async function getStaticPaths() {
  const categories = [
    'festivals',
    'concerts',
    'expositions',
    'marches',
    'sports',
    'animations'
  ];
  
  const paths = [];
  
  for (const localeConfig of locales) {
    for (const category of categories) {
      paths.push({
        params: { 
          locale: localeConfig.code,
          category: category
        },
      });
    }
  }
  
  return paths;
}

