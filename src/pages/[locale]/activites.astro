---
// Activités page - Things to do in Annecy
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import { loadTranslations, t, locales } from '../../utils/i18n';
import type { Locale } from '../../types/i18n';

export async function getStaticPaths() {
  return locales.map((localeConfig) => ({
    params: { locale: localeConfig.code },
  }));
}

const { locale } = Astro.params;
const translations = await loadTranslations(locale as Locale);

// SEO data
const title = `${t(translations, 'nav.activites')} - Salut Annecy`;
const description = "Découvrez toutes les activités à faire à Annecy : sportives, culturelles, bien-être et loisirs pour tous les goûts.";

// Mock data for activities
const activities = [
  {
    id: 1,
    name: "Croisière sur le Lac d'Annecy",
    category: "Nautique",
    description: "Découvrez le lac d'Annecy depuis l'eau lors d'une croisière commentée",
    duration: "1h30",
    price: 25,
    difficulty: "Facile",
    image: "/images/activities/croisiere.jpg"
  },
  {
    id: 2,
    name: "Randonnée au Semnoz",
    category: "Randonnée",
    description: "Randonnée panoramique avec vue sur le lac et les Alpes",
    duration: "4h",
    price: 0,
    difficulty: "Modéré",
    image: "/images/activities/semnoz.jpg"
  },
  {
    id: 3,
    name: "Visite du Château d'Annecy",
    category: "Culturelle",
    description: "Découvrez l'histoire d'Annecy dans ce château médiéval",
    duration: "2h",
    price: 8,
    difficulty: "Facile",
    image: "/images/activities/chateau.jpg"
  },
  {
    id: 4,
    name: "Spa Thermal",
    category: "Bien-être",
    description: "Détente et relaxation dans un cadre naturel exceptionnel",
    duration: "3h",
    price: 45,
    difficulty: "Facile",
    image: "/images/activities/spa.jpg"
  }
];

const categories = ["Tous", "Sportives", "Culturelles", "Bien-être", "Nautique", "Randonnée", "Vélo"];
const difficulties = ["Tous niveaux", "Facile", "Modéré", "Difficile"];
---

<Layout 
  title={title} 
  description={description} 
  locale={locale}
>
  <Navigation locale={locale} currentPath="/activites" />
  
  <main class="activities-page">
    <!-- Hero Section -->
    <section class="hero-section">
      <div class="container">
        <h1 class="page-title">{t(translations, 'nav.activites')}</h1>
        <p class="page-description">
          Découvrez toutes les activités à faire à Annecy : sportives, culturelles, bien-être et loisirs pour tous les goûts.
        </p>
      </div>
    </section>

    <!-- Filters Section -->
    <section class="filters-section">
      <div class="container">
        <div class="filters-grid">
          <div class="filter-group">
            <span class="filter-label">Catégorie :</span>
            <div class="filter-buttons">
              {categories.map((category) => (
                <button class={`filter-btn ${category === 'Tous' ? 'active' : ''}`}>
                  {category}
                </button>
              ))}
            </div>
          </div>
          
          <div class="filter-group">
            <span class="filter-label">Difficulté :</span>
            <div class="filter-buttons">
              {difficulties.map((difficulty) => (
                <button class={`filter-btn ${difficulty === 'Tous niveaux' ? 'active' : ''}`}>
                  {difficulty}
                </button>
              ))}
            </div>
          </div>
          
          <div class="filter-group">
            <span class="filter-label">Prix :</span>
            <div class="price-filter">
              <label class="checkbox-label">
                <input type="checkbox" checked />
                Gratuit
              </label>
              <label class="checkbox-label">
                <input type="checkbox" checked />
                Payant
              </label>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Results Section -->
    <section class="results-section">
      <div class="container">
        <div class="results-header">
          <p class="results-count">{activities.length} activités trouvées</p>
          <select class="sort-select">
            <option value="relevance">Pertinence</option>
            <option value="price-low">Prix croissant</option>
            <option value="price-high">Prix décroissant</option>
            <option value="duration">Durée</option>
            <option value="difficulty">Difficulté</option>
          </select>
        </div>

        <div class="activities-grid">
          {activities.map((activity) => (
            <article class="activity-card">
              <div class="activity-image">
                <img src={activity.image} alt={activity.name} loading="lazy" />
                <div class="activity-category">{activity.category}</div>
                <div class="activity-difficulty difficulty-{activity.difficulty.toLowerCase()}">
                  {activity.difficulty}
                </div>
              </div>
              <div class="activity-content">
                <h3 class="activity-name">{activity.name}</h3>
                <p class="activity-description">{activity.description}</p>
                
                <div class="activity-details">
                  <div class="detail-item">
                    <svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                    </svg>
                    <span>Durée : {activity.duration}</span>
                  </div>
                  <div class="detail-item">
                    <svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M11.8 10.9c-2.27-.59-3-1.2-3-2.15 0-1.09 1.01-1.85 2.7-1.85 1.78 0 2.44.85 2.5 2.1h2.21c-.07-1.72-1.12-3.3-3.21-3.81V3h-3v2.16c-1.94.42-3.5 1.68-3.5 3.61 0 2.31 1.91 3.46 4.7 4.13 2.5.6 3 1.48 3 2.41 0 .69-.49 1.79-2.7 1.79-2.06 0-2.87-.92-2.98-2.1h-2.2c.12 2.19 1.76 3.42 3.68 3.83V21h3v-2.15c1.95-.37 3.5-1.5 3.5-3.55 0-2.84-2.43-3.81-4.7-4.4z"/>
                    </svg>
                    <span>
                      {activity.price === 0 ? 'Gratuit' : `${activity.price}€`}
                    </span>
                  </div>
                </div>

                <div class="activity-actions">
                  <a href={`/${locale}/activites/${activity.id}`} class="btn btn-primary">
                    Voir les détails
                  </a>
                  <button class="btn btn-ghost favorite-btn" aria-label="Ajouter aux favoris">
                    <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                    </svg>
                  </button>
                </div>
              </div>
            </article>
          ))}
        </div>

        <!-- Pagination -->
        <nav class="pagination" aria-label="Navigation des pages">
          <button class="btn btn-ghost" disabled>Précédent</button>
          <button class="btn btn-primary">1</button>
          <button class="btn btn-ghost">2</button>
          <button class="btn btn-ghost">3</button>
          <button class="btn btn-ghost">Suivant</button>
        </nav>
      </div>
    </section>
  </main>
</Layout>

<style>
  .activities-page {
    min-height: 100vh;
  }

  .hero-section {
    background: linear-gradient(135deg, #10b981 0%, #3b82f6 100%);
    color: white;
    padding: 4rem 0 3rem;
  }

  .page-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    text-align: center;
  }

  .page-description {
    font-size: 1.25rem;
    text-align: center;
    opacity: 0.9;
    max-width: 600px;
    margin: 0 auto;
  }

  .filters-section {
    padding: 2rem 0;
    background: #f8f9fa;
    border-bottom: 1px solid #e9ecef;
  }

  .filters-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .filter-group {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .filter-label {
    font-weight: 600;
    color: #495057;
    font-size: 0.875rem;
  }

  .filter-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .filter-btn {
    padding: 0.5rem 1rem;
    border: 1px solid #dee2e6;
    background: white;
    border-radius: 2rem;
    font-size: 0.875rem;
    cursor: pointer;
    transition: all 0.2s;
  }

  .filter-btn:hover,
  .filter-btn.active {
    background: #10b981;
    color: white;
    border-color: #10b981;
  }

  .price-filter {
    display: flex;
    gap: 1rem;
  }

  .checkbox-label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    cursor: pointer;
  }

  .checkbox-label input[type="checkbox"] {
    width: 1rem;
    height: 1rem;
  }

  .results-section {
    padding: 2rem 0;
  }

  .results-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .results-count {
    font-weight: 600;
    color: #495057;
  }

  .sort-select {
    padding: 0.5rem 1rem;
    border: 1px solid #dee2e6;
    border-radius: 0.375rem;
    background: white;
    font-size: 0.875rem;
  }

  .activities-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .activity-card {
    background: white;
    border-radius: 0.75rem;
    overflow: hidden;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .activity-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px -5px rgba(0, 0, 0, 0.1);
  }

  .activity-image {
    position: relative;
    height: 200px;
    background: #f8f9fa;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #6c757d;
  }

  .activity-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .activity-category {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background: rgba(0, 0, 0, 0.8);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .activity-difficulty {
    position: absolute;
    top: 1rem;
    right: 1rem;
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .difficulty-facile {
    background: #10b981;
    color: white;
  }

  .difficulty-modéré {
    background: #f59e0b;
    color: white;
  }

  .difficulty-difficile {
    background: #ef4444;
    color: white;
  }

  .activity-content {
    padding: 1.5rem;
  }

  .activity-name {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: #212529;
  }

  .activity-description {
    color: #6c757d;
    margin-bottom: 1rem;
    line-height: 1.5;
  }

  .activity-details {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .detail-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: #495057;
  }

  .detail-item svg {
    color: #10b981;
  }

  .activity-actions {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .activity-actions .btn {
    flex: 1;
  }

  .favorite-btn {
    flex: 0 0 auto;
    padding: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .favorite-btn:hover {
    color: #ef4444;
  }

  .pagination {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
  }

  @media (max-width: 768px) {
    .page-title {
      font-size: 2rem;
    }

    .filters-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .results-header {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }

    .activities-grid {
      grid-template-columns: 1fr;
    }

    .activity-actions {
      flex-direction: column;
    }

    .activity-actions .btn {
      flex: none;
      width: 100%;
    }
  }
</style>