---
// Profile Page
import Layout from '../../layouts/Layout.astro';
import { getLocaleFromUrl, loadTranslations, t } from '../../utils/i18n';
import type { Locale } from '../../types/i18n';

const locale = getLocaleFromUrl(Astro.url) as Locale;
const translations = await loadTranslations(locale);

const title = t(translations, 'nav.profile');
const description = 'G√©rez votre profil, vos pr√©f√©rences et vos informations personnelles.';

// This would normally come from authentication context
const currentUser = {
  id: '1',
  firstName: 'Jean',
  lastName: 'Dupont',
  email: 'jean.dupont@example.com',
  avatar: '/images/avatars/default.jpg',
  bio: 'D√©veloppeur passionn√© par les nouvelles technologies.',
  role: 'USER',
  emailVerified: true,
  memberSince: new Date('2023-06-15'),
  lastLogin: new Date('2024-01-15'),
};

// User stats
const userStats = {
  postsCreated: 5,
  commentsPosted: 23,
  likesReceived: 142,
  profileViews: 89
};
---

<Layout 
  title={title}
  description={description}
  locale={locale}
>
  <main class="profile-page">
    <div class="container">
      <!-- Profile Header -->
      <section class="profile-header">
        <div class="profile-info">
          <div class="avatar-section">
            <img 
