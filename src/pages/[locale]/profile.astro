              <div class="form-group">
                <label for="newPassword" class="form-label">Nouveau mot de passe</label>
                <input
                  type="password"
                  id="newPassword"
                  name="newPassword"
                  class="input"
                  required
                />
              </div>
              
              <div class="form-group">
                <label for="confirmPassword" class="form-label">Confirmer le nouveau mot de passe</label>
                <input
                  type="password"
                  id="confirmPassword"
                  name="confirmPassword"
                  class="input"
                  required
                />
              </div>
              
              <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                  Changer le mot de passe
                </button>
              </div>
            </form>
            
            <div class="security-section">
              <h3>Sessions actives</h3>
              <div class="session-list">
                <div class="session-item">
                  <div class="session-info">
                    <strong>Session actuelle</strong>
                    <span>Chrome sur Windows - 192.168.1.100</span>
                    <span class="session-time">Maintenant</span>
                  </div>
                  <span class="session-status current">Actuelle</span>
                </div>
                <div class="session-item">
                  <div class="session-info">
                    <strong>Session mobile</strong>
                    <span>Safari sur iOS - Mobile</span>
                    <span class="session-time">Il y a 2 heures</span>
                  </div>
                  <button class="btn btn-ghost btn-sm">D√©connecter</button>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Preferences Tab -->
        <div class="tab-content" data-tab-content="preferences">
          <div class="content-card">
            <h2 class="card-title">Pr√©f√©rences</h2>
            
            <form class="profile-form" id="preferencesForm">
              <div class="form-group">
                <label class="form-label">Langue</label>
                <select class="select" name="language">
                  <option value="fr" selected>Fran√ßais</option>
                  <option value="en">English</option>
                  <option value="de">Deutsch</option>
                  <option value="es">Espa√±ol</option>
                  <option value="ar">ÿßŸÑÿπÿ±ÿ®Ÿäÿ©</option>
                  <option value="zh">‰∏≠Êñá</option>
