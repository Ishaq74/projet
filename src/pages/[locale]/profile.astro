            <span class="stat-label">Articles</span>
          </div>
          <div class="stat-item">
            <span class="stat-value">{userStats.commentsPosted}</span>
            <span class="stat-label">Commentaires</span>
          </div>
          <div class="stat-item">
            <span class="stat-value">{userStats.likesReceived}</span>
            <span class="stat-label">Likes re√ßus</span>
          </div>
          <div class="stat-item">
            <span class="stat-value">{userStats.profileViews}</span>
            <span class="stat-label">Vues profil</span>
          </div>
        </div>
      </section>
      
      <!-- Profile Tabs -->
      <section class="profile-content">
        <div class="tab-navigation">
          <button class="tab-btn active" data-tab="personal">
            üë§ Informations personnelles
          </button>
          <button class="tab-btn" data-tab="security">
            üîí S√©curit√©
          </button>
          <button class="tab-btn" data-tab="preferences">
            ‚öôÔ∏è Pr√©f√©rences
          </button>
