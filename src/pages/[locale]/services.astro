---
// Services Page
import Layout from '../../layouts/Layout.astro';
import { getLocaleFromUrl, loadTranslations, t } from '../../utils/i18n';
import type { Locale } from '../../types/i18n';

const locale = getLocaleFromUrl(Astro.url) as Locale;
const translations = await loadTranslations(locale);

const title = t(translations, 'nav.services');
const description = t(translations, 'seo.services.description') || 'D√©couvrez nos services personnalis√©s pour r√©pondre √† tous vos besoins.';

// Sample services data
const services = [
  {
    id: 1,
    title: 'D√©veloppement Web',
    description: 'Solutions web modernes et performantes avec les derni√®res technologies.',
    icon: 'üåê',
    features: ['Astro', 'TypeScript', 'Design Responsive', 'SEO Optimis√©'],
    price: 'Sur devis'
  },
  {
    id: 2,
    title: 'Consultation Technique',
    description: 'Accompagnement et conseils pour vos projets techniques.',
    icon: 'üí°',
    features: ['Architecture', 'Performance', 'S√©curit√©', 'Scalabilit√©'],
    price: '150‚Ç¨/heure'
  },
  {
    id: 3,
    title: 'Formation',
    description: 'Formations personnalis√©es pour vos √©quipes.',
    icon: 'üéì',
    features: ['JavaScript', 'Astro', 'TypeScript', 'Pratique'],
    price: '√Ä partir de 800‚Ç¨'
  }
];
---

<Layout 
  title={title}
  description={description}
  locale={locale}
>
  <main class="services-page">
    <div class="container">
      <!-- Hero Section -->
      <section class="hero-section">
        <h1 class="hero-title">{title}</h1>
        <p class="hero-description">
          Nous proposons des services de haute qualit√© pour accompagner votre transformation digitale
          et optimiser vos performances en ligne.
        </p>
      </section>
      
      <!-- Services Grid -->
      <section class="services-section">
        <h2 class="section-title">Nos Services</h2>
        <div class="services-grid">
          {services.map((service) => (
            <div class="service-card">
              <div class="service-icon">{service.icon}</div>
              <h3 class="service-title">{service.title}</h3>
              <p class="service-description">{service.description}</p>
              
              <ul class="service-features">
                {service.features.map((feature) => (
                  <li class="service-feature">
                    ‚úì {feature}
                  </li>
                ))}
              </ul>
              
              <div class="service-footer">
                <div class="service-price">{service.price}</div>
                <a href={`/${locale}/contact?service=${service.id}`} class="btn btn-primary">
                  Demander un devis
                </a>
              </div>
            </div>
          ))}
        </div>
      </section>
      
      <!-- CTA Section -->
      <section class="cta-section">
        <div class="cta-content">
          <h2 class="cta-title">Besoin d'un service personnalis√© ?</h2>
          <p class="cta-description">
            Contactez-nous pour discuter de vos besoins sp√©cifiques et obtenir une solution sur mesure.
          </p>
          <a href={`/${locale}/contact`} class="btn btn-primary btn-lg">
            Nous contacter
          </a>
        </div>
      </section>
    </div>
  </main>
</Layout>

<style>
  .services-page {
    padding: var(--space-8) 0;
  }
  
  .hero-section {
    text-align: center;
    margin-bottom: var(--space-16);
  }
  
  .hero-title {
    font-size: var(--font-size-4xl);
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    margin-bottom: var(--space-6);
    line-height: var(--line-height-tight);
  }
  
  .hero-description {
    font-size: var(--font-size-xl);
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
    line-height: var(--line-height-relaxed);
  }
  
  .services-section {
    margin-bottom: var(--space-16);
  }
  
  .section-title {
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    text-align: center;
    margin-bottom: var(--space-12);
  }
  
  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--space-8);
  }
  
  .service-card {
    background: var(--bg-surface);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-lg);
    padding: var(--space-8);
    text-align: center;
    transition: var(--transition-all);
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  
  .service-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
  }
  
  .service-icon {
    font-size: 4rem;
    margin-bottom: var(--space-6);
  }
  
  .service-title {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    margin-bottom: var(--space-4);
  }
  
  .service-description {
    color: var(--text-secondary);
    line-height: var(--line-height-relaxed);
    margin-bottom: var(--space-6);
    flex: 1;
  }
  
  .service-features {
    list-style: none;
    padding: 0;
    margin: 0 0 var(--space-8) 0;
    text-align: left;
  }
  
  .service-feature {
    padding: var(--space-2) 0;
    color: var(--text-secondary);
  }
  
  .service-footer {
    margin-top: auto;
    padding-top: var(--space-6);
    border-top: 1px solid var(--border-primary);
  }
  
  .service-price {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-accent);
    margin-bottom: var(--space-4);
  }
  
  .cta-section {
    background: linear-gradient(135deg, var(--color-primary-500) 0%, var(--color-primary-600) 100%);
    border-radius: var(--radius-lg);
    padding: var(--space-16) var(--space-8);
    text-align: center;
    color: white;
  }
  
  .cta-title {
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-bold);
    margin-bottom: var(--space-4);
  }
  
  .cta-description {
    font-size: var(--font-size-lg);
    opacity: 0.9;
    max-width: 500px;
    margin: 0 auto var(--space-8) auto;
    line-height: var(--line-height-relaxed);
  }
  
  @media (max-width: 768px) {
    .hero-title {
      font-size: var(--font-size-3xl);
    }
    
    .hero-description {
      font-size: var(--font-size-lg);
    }
    
    .services-grid {
      grid-template-columns: 1fr;
    }
    
    .cta-section {
      padding: var(--space-12) var(--space-6);
    }
    
    .cta-title {
      font-size: var(--font-size-2xl);
    }
  }
</style>