  }
  
  function quotePost(button: any) {
    const post = button.closest('.post');
    const authorName = post.querySelector('.author-name').textContent?.trim();
    const content = post.querySelector('.prose').textContent?.trim();
    
    const textarea = document.querySelector('.reply-textarea') as HTMLTextAreaElement;
