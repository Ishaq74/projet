---
// Spinner atom component - Loading indicators
export interface Props {
  variant?: 'circular' | 'dots' | 'pulse';
  size?: 'xs' | 'sm' | 'md' | 'lg' | 'xl';
  color?: 'primary' | 'secondary' | 'current';
  class?: string;
  'aria-label'?: string;
}

const {
  variant = 'circular',
  size = 'md',
  color = 'primary',
  class: className = '',
  'aria-label': ariaLabel = 'Loading',
} = Astro.props;

const classes = [
  'spinner',
  `spinner--${variant}`,
  `spinner--${size}`,
  `spinner--${color}`,
  className
].filter(Boolean).join(' ');
---

<div class={classes} role="status" aria-label={ariaLabel}>
  {variant === 'circular' && (
    <svg class="spinner__svg" viewBox="0 0 24 24" fill="none">
      <circle
        class="spinner__circle"
        cx="12"
        cy="12"
        r="10"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
      />
    </svg>
  )}
  
  {variant === 'dots' && (
    <div class="spinner__dots">
      <div class="spinner__dot"></div>
      <div class="spinner__dot"></div>
      <div class="spinner__dot"></div>
    </div>
  )}
  
  {variant === 'pulse' && (
    <div class="spinner__pulse">
      <div class="spinner__pulse-ring"></div>
      <div class="spinner__pulse-ring"></div>
      <div class="spinner__pulse-ring"></div>
    </div>
  )}
  
  <span class="sr-only">{ariaLabel}</span>
</div>

<style>
  .spinner {
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  /* Size variants */
  .spinner--xs {
    width: var(--size-4);
    height: var(--size-4);
  }

  .spinner--sm {
    width: var(--size-5);
    height: var(--size-5);
  }

  .spinner--md {
    width: var(--size-6);
    height: var(--size-6);
  }

  .spinner--lg {
    width: var(--size-8);
    height: var(--size-8);
  }

  .spinner--xl {
    width: var(--size-12);
    height: var(--size-12);
  }

  /* Color variants */
  .spinner--primary {
    color: var(--color-primary-500);
  }

  .spinner--secondary {
    color: var(--color-secondary-500);
  }

  .spinner--current {
    color: currentColor;
  }

  /* ===== CIRCULAR SPINNER ===== */
  .spinner__svg {
    width: 100%;
    height: 100%;
    animation: spin 1s linear infinite;
  }

  .spinner__circle {
    stroke-dasharray: 60;
    stroke-dashoffset: 45;
    opacity: 0.75;
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  /* ===== DOTS SPINNER ===== */
  .spinner__dots {
    display: flex;
    gap: var(--space-1);
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
  }

  .spinner__dot {
    width: 20%;
    height: 20%;
    background-color: currentColor;
    border-radius: var(--radius-full);
    animation: dots-bounce 1.4s ease-in-out infinite both;
  }

  .spinner__dot:nth-child(1) {
    animation-delay: -0.32s;
  }

  .spinner__dot:nth-child(2) {
    animation-delay: -0.16s;
  }

  .spinner__dot:nth-child(3) {
    animation-delay: 0s;
  }

  @keyframes dots-bounce {
    0%, 80%, 100% {
      transform: scale(0.8);
      opacity: 0.5;
    }
    40% {
      transform: scale(1.2);
      opacity: 1;
    }
  }

  /* ===== PULSE SPINNER ===== */
  .spinner__pulse {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .spinner__pulse-ring {
    position: absolute;
    width: 100%;
    height: 100%;
    border: 2px solid currentColor;
    border-radius: var(--radius-full);
    opacity: 0;
    animation: pulse-ring 2s linear infinite;
  }

  .spinner__pulse-ring:nth-child(1) {
    animation-delay: 0s;
  }

  .spinner__pulse-ring:nth-child(2) {
    animation-delay: 0.5s;
  }

  .spinner__pulse-ring:nth-child(3) {
    animation-delay: 1s;
  }

  @keyframes pulse-ring {
    0% {
      transform: scale(0.8);
      opacity: 1;
    }
    100% {
      transform: scale(1.8);
      opacity: 0;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .spinner__svg {
      animation: none;
    }
    
    .spinner__dot {
      animation: none;
      opacity: 0.7;
    }
    
    .spinner__pulse-ring {
      animation: none;
      opacity: 0.5;
      transform: scale(1.2);
    }
    
    .spinner__pulse-ring:nth-child(2),
    .spinner__pulse-ring:nth-child(3) {
      display: none;
    }
  }
</style>